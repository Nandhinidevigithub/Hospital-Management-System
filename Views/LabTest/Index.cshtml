@model IEnumerable<HospitalManagementSysSprint_CoreMvc.Models.LabTestVM>

@{
    ViewData["Title"] = "Index";
}

<h1>LabTest</h1>
<div>
     <img src="~/image/lab.jpeg"width="50%" height="250px">
</div>
<br/>
<p>

    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LabTestId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LabTestName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LabTestId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LabTestName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.LabTestId }) |
                
                @Html.ActionLink("Delete", "Delete", new {  id=item.LabTestId  })
            </td>
        </tr>
}
    </tbody>
</table>
