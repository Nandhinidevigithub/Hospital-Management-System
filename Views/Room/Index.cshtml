@model IEnumerable<HospitalManagementSysSprint_CoreMvc.Models.RoomVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Room</h1>
<div>
     <img src="~/image/rm.jpeg"width="50%" height="250px">
</div>
<br/>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoomId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomTypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoomId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomType.RoomTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.RoomId }) |
               
                @Html.ActionLink("Delete", "Delete", new {  id=item.RoomId })
            </td>
        </tr>
}
    </tbody>
</table>
